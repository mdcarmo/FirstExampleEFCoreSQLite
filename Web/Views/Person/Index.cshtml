@model IEnumerable<Web.Models.Person>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h1 class="text-center">Personagens</h1>
    <p><a asp-action="Create">Create New</a></p>
    <div class="row1">
        @foreach (var item in Model)
        {
            <div class="item well">
                <p><img src="@Html.DisplayFor(modelItem => item.ImageUrl)" width="250" height="170" /></p>
                <p>@Html.DisplayFor(modelItem => item.Name)</p>
                <p>@Html.DisplayFor(modelItem => item.Creator) - @Html.DisplayFor(modelItem => item.YearCreation)</p>
                <p> @Html.DisplayFor(modelItem => item.Description)</p>
                <p>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </p>
            </div>
        }
    </div>
</div>